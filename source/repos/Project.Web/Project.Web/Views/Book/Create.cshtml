@model Project.ViewModels.BookViews.CreateBookView
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


<h2>Create</h2>

<h4>Book</h4>

@Html.ValidationSummary(false, "Please make sure you have entered correct details")

<form asp-antiforgery="true" asp-action="Create" asp-controller="Book">



    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label">Автор</label>
        <input type="text" asp-for="Author" class="form-control" />
        <span asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Категория</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>

</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

